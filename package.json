{
  "name": "e2e-chat-app",
  "version": "1.0.0",
  "description": "End-to-end encrypted chat application",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "ngrok:backend": "./scripts/start-ngrok-backend.sh",
    "ngrok:frontend": "./scripts/start-ngrok-frontend.sh",
    "ngrok:both": "./scripts/start-ngrok-both.sh",
    "dev:ngrok": "concurrently \"npm run backend:dev\" \"npm run ngrok:backend\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:restart": "docker-compose restart postgres",
    "docker:psql": "docker-compose exec postgres psql -U ${DB_USER:-postgres} -d ${DB_NAME:-e2e_chat}"
  },
  "keywords": ["chat", "encryption", "e2e", "websocket"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}

